<html>
<head>
    <style>
        * {
            background: #f2f7f2;
        }
        nav {
            background: #C8FF33;
        }
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        nav a {
            display: block;
            width: 60px;
        }

        .nav-left {
            float: left;
        }

        .nav-left ul li {
            float: left;
        }

        .nav-right ul li {
            float: right;
        }
        li a {
            color: #FF9333;
            line-height: 1.3;
            margin-bottom: 0;
            padding-bottom: 0;
            padding-left: 2em;
            padding-top: 0.5em;
            display: block;
            font-size: 0.9em;
            margin-block-start: 0.83em;
            margin-block-end: 0.83em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            font-weight: bold;
            font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
        }
    </style>
</head>
<body>
    <nav class="nav">
        <div class="nav-left">
            <ul>
                <!-- Loop through cat data -->
                {% for cat in cats %}
                <li>
                    <a href="/aboutme/{{ cat.name | slug }}/">{{ cat.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="nav-right">
            <ul>
                 <!-- Loop through dog data -->
                {% for dog in dogs %}
                <li>
                    <a href="/dogs/{{ dog.name | slug }}/">{{ dog.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </nav>

</body>
</html>